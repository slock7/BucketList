@model BucketData

@{
    ViewBag.Title = "Create Activity";
}

<p>
    <h2>Create</h2>
</p>

<form method="post">

    <div class="form-group">
        <label asp-for="Activity"></label>
        <input class="form-control" asp-for="Activity" />
        <span asp-validation-for="Activity"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div class="form-group">
        <label asp-for="ActivityType"></label>
        <select class="custom-select" asp-for="ActivityType" asp-items="@Html.GetEnumSelectList<ActivityType>()"></select>
        <span asp-validation-for="ActivityType"></span>
    </div>

    <input type="submit" class="btn btn-primary" name="save" value="Save" />

</form>
<div asp-validation-summary="All"></div>

<div>
    <a class="btn btn-success" asp-action="Index" asp-controller="Home">Back to main</a>
</div>